@model NutriPlat.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<style>
    body {
        background-color: #f4f7f6;
        color: #333;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 20px; /* Añade algo de padding general por si acaso */
    }

    .login-card {
        background-color: #ffffff;
        border: 1px solid #d1d9e6;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

        /* Aseguramos que el h2 dentro del login-card tome el text-center y mb-4 */
        .login-card h2.text-center {
            color: #2c3e50;
            font-weight: 600;
            /* text-center y mb-4 son de Bootstrap, pero podrías forzarlo aquí si fuera necesario,
               aunque lo ideal es que Bootstrap funcione:
               text-align: center !important;
               margin-bottom: 1.5rem !important; (equivalente a mb-4)
            */
        }

        .login-card label.form-label { /* Estilo específico para labels dentro de la tarjeta */
            color: #555;
            font-weight: 500;
            /* Bootstrap añade margin-bottom: .5rem; a .form-label por defecto.
               Si no lo hace, puedes añadirlo:
               margin-bottom: 0.5rem;
            */
        }

        .login-card small,
        .login-card .text-muted {
            color: #6c757d !important;
        }

        .login-card .form-control {
            background-color: #f8f9fa;
            color: #333;
            border: 1px solid #ced4da;
        }

            .login-card .form-control::placeholder {
                color: #999;
            }

            .login-card .form-control:focus {
                background-color: #fff;
                border-color: #f39c12;
                box-shadow: 0 0 0 0.25rem rgba(243, 156, 18, 0.25);
            }

        .login-card .btn-login {
            background-color: #f39c12;
            border-color: #f39c12;
            color: #ffffff;
            font-weight: bold;
            padding: 10px 15px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

            .login-card .btn-login:hover {
                background-color: #e67e22;
                border-color: #e67e22;
            }

        .login-card .alert-danger {
        }

        .login-card .text-danger {
            color: #dc3545 !important;
        }

</style>

<div class="login-wrapper">
    <div class="card p-4 login-card" style="max-width: 420px; width: 100%;">
        <h2 class="text-center mb-4">
            NutriPlat - Inicia sesión
        </h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-4">
                <label asp-for="Email" class="form-label">Correo electrónico</label>
                <input asp-for="Email" class="form-control" placeholder="tu@email.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Contraseña</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-login w-100 mt-3">Iniciar sesión</button>
        </form>

        <div class="text-center mt-4">
            <small class="text-muted">¿No tienes cuenta? Contacta con tu administrador.</small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}